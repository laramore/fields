{
    "name": "laramore/fields",
    "description": "Define all default fields used in Laramore",
    "keywords": ["ORM", "Laravel", "Model", "Migration", "Automatic", "Auto", "Fields", "Field", "Meta", "Table", "Database", "Validations"],
    "license": "MIT",
    "config": {
       "platform": {
           "php": "7.0.8"
       }
   },
    "require": {
        "php": ">=7.0.8",
        "illuminate/database": ">=5.5",
        "nesbot/carbon": ">=1.0",
        "symfony/http-kernel": ">=3.4",
        "laramore/types": "^0.4.3",
        "laramore/proxies": "^0.3.0"
    },
    "authors": [
        {
            "name": "Nastuzzi Samy",
            "email": "samy@nastuzzi.fr"
        }
    ],
    "autoload": {
        "psr-4": {
            "Laramore\\": "src/"
        }
    },
    "scripts": {
        "test:lint": [
            "./vendor/bin/phpcs src",
            "./vendor/bin/phpmd src text phpmd.xml"
        ],
        "fix:lint": [
            "./vendor/bin/phpcbf src"
        ],
        "test:unit": [
            "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests"
        ],
        "test": [
            "@composer test:lint",
            "@composer test:unit"
        ]
    },
    "require-dev": {
        "phpmd/phpmd": ">=2.7",
        "squizlabs/php_codesniffer": ">=3.5",
        "phpstan/phpstan": ">=0.9.2",
        "phpunit/phpunit": ">=6.5"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laramore\\Providers\\FieldProvider",
                "Laramore\\Providers\\FieldConstraintProvider",
                "Laramore\\Providers\\FieldProxyProvider"
            ],
            "aliases": {
                "FieldConstraint": "Laramore\\Facades\\FieldConstraint",
                "FieldProxy": "Laramore\\Facades\\FieldProxy"
            }
        }
    }
}
